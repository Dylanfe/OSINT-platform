# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/osint-nexus

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d

# API Keys for OSINT Services (Replace with your actual API keys)
SHODAN_API_KEY=your-shodan-api-key
HAVE_I_BEEN_PWNED_API_KEY=your-hibp-api-key
HUNTER_IO_API_KEY=your-hunter-io-api-key
CENSYS_API_ID=your-censys-api-id
CENSYS_API_SECRET=your-censys-api-secret
SECURITY_TRAILS_API_KEY=your-security-trails-api-key
VIRUSTOTAL_API_KEY=your-virustotal-api-key
OPENCORPORATES_API_KEY=your-opencorporates-api-key
TINEYE_API_KEY=your-tineye-api-key
TINEYE_PRIVATE_KEY=your-tineye-private-key
SERPAPI_KEY=your-serpapi-key
PIPL_API_KEY=your-pipl-api-key
CRIMINALIP_API_KEY=your-criminalip-api-key
GREYNOISE_API_KEY=your-greynoise-api-key
ABUSEIPDB_API_KEY=your-abuseipdb-api-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Social Media APIs
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Storage Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_MAX_REQUESTS=50

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
